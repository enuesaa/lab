{
  "QueryLanguage": "JSONata",
  "StartAt": "StartEC2Instance",
  "States": {
    "StartEC2Instance": {
      "Type": "Task",
      "Resource": "arn:aws:states:::aws-sdk:ec2:runInstances",
      "Arguments": {
        "ImageId": "ami-0cef62348b8426830",
        "InstanceType": "t4g.small",
        "MinCount": 1,
        "MaxCount": 1,
        "SecurityGroupIds": [
          "<SecurityGroupId>"
        ],
        "SubnetId": "<SubnetID>",
        "IamInstanceProfile": {
          "Name": "<InstanceProfileName>"
        },
        "TagSpecifications": [
          {
            "ResourceType": "instance",
            "Tags": [
              {
                "Key": "Name",
                "Value": "testec2"
              }
            ]
          }
        ]
      },
      "Assign": {
        "instanceId": "{% $states.result.Instances[0].InstanceId %}"
      },
      "Next": "WaitEC2InstanceStartUp"
    },
    "WaitEC2InstanceStartUp": {
      "Type": "Wait",
      "Seconds": 60,
      "Next": "RunCommand"
    },
    "RunCommand": {
      "Type": "Task",
      "Resource": "arn:aws:states:::aws-sdk:ssm:sendCommand",
      "Arguments": {
        "DocumentName": "AWS-RunShellScript",
        "InstanceIds": "{% [$instanceId] %}",
        "Parameters": {
          "commands": [
            "apt update",
            "apt install -y git"
          ]
        }
      },
      "Assign": {
        "commandId": "{% $states.result.Command.CommandId %}"
      },
      "Next": "WaitCommand"
    },
    "WaitCommand": {
      "Type": "Wait",
      "Next": "GetCommandStatus",
      "Seconds": 30
    },
    "GetCommandStatus": {
      "Type": "Task",
      "Resource": "arn:aws:states:::aws-sdk:ssm:getCommandInvocation",
      "Arguments": {
        "CommandId": "{% $commandId %}",
        "InstanceId": "{% $instanceId %}"
      },
      "Next": "CheckCommandStatus"
    },
    "CheckCommandStatus": {
      "Type": "Choice",
      "Choices": [
        {
          "Next": "WaitCommand",
          "Condition": "{% $states.input.Status = \"InProgress\" %}",
          "Comment": "InProgress"
        },
        {
          "Next": "NotifyCommandFailed",
          "Condition": "{% $states.input.Status = \"Failed\" %}",
          "Comment": "Failed"
        }
      ],
      "Default": "TerminateEC2Instance"
    },
    "NotifyCommandFailed": {
      "Type": "Task",
      "Resource": "arn:aws:states:::sns:publish",
      "Arguments": {
        "TopicArn": "<SNSTopicArn>",
        "Message": {
          "message": "コマンドの実行に失敗しました"
        }
      },
      "Next": "TerminateEC2Instance"
    },
    "TerminateEC2Instance": {
      "Type": "Task",
      "Resource": "arn:aws:states:::aws-sdk:ec2:terminateInstances",
      "End": true,
      "Arguments": {
        "InstanceIds": "{% [$instanceId] %}"
      }
    }
  }
}
