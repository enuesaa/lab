{
	"name": "@enuesaa/lab",
	"type": "module",
	"private": true,
	"license": "MIT",
	"scripts": {
		"dev": "rm -rf .svelte-kit && svelte-kit sync && vite dev --port 3000",
		"build": "vite build",
		"postbuild": "svelte-sitemap --domain https://lab.enuesaa.dev --out-dir dist --change-freq yearly",
		"preview": "vite preview",
		"test": "pnpm sync && vitest run",
		"format": "prettier --write src"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@types/node": "^22.10.5",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "5.17.3",
		"svelte-sitemap": "^2.7.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vitest": "^3.2.2"
	},
	"dependencies": {
		"highlight.js": "^11.11.1",
		"jszip": "^3.10.1",
		"lucide-svelte": "^0.471.0",
		"paneforge": "^0.0.6",
		"yaml": "^2.7.0"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 2,
		"semi": false,
		"singleQuote": true,
		"endOfLine": "lf",
		"trailingComma": "es5",
		"plugins": [
			"prettier-plugin-svelte"
		],
		"useTabs": true,
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
